generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resumes   Resume[]
}

model Resume {
  id         String   @id @default(cuid())
  userId     String
  title      String
  userEmail  String
  userName   String
  firstName  String
  lastName   String
  jobTitle   String
  address    String
  phone      String
  email      String
  themeColor String
  summary    String
  experience Json[]
  education  Json[]
  skills     String[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id])
}
